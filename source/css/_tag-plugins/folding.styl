details
  display: block
  padding: $gap
  margin: $gap-row 0
  border-radius: $border-codeblock
  border: 1px solid darken($color-block, 4)
  background: $color-card
  trans()
  summary
    cursor: pointer
    background: $color-block
    padding: $gap
    margin: 0 - $gap
    border-radius: $border-codeblock
    color: alpha($color-p, .7)
    font-size: $fontsize-meta
    font-weight: bold
    >
      p,h1,h2,h3,h4,h5,h6
        display: inline
        border-bottom: none !important
    &:hover
      color: $color-p
      &:after
        float: right
        content: '+'
  // >div.content
  //   padding-top: 0.1px
  //   padding-bottom: 0.1px
    // margin-top: $gap
    // margin-bottom: "calc(%s - %s)" % ($gap $gap)
  &[blue]
    border: 1px solid darken(bgcolor($color-md-blue), 4)
    >summary
      background: bgcolor($color-md-blue)
  &[cyan]
    border: 1px solid darken(bgcolor($color-mac-cyan), 4)
    >summary
      background: bgcolor($color-mac-cyan)
  &[green]
    border: 1px solid darken(bgcolor($color-mac-green), 4)
    >summary
      background: bgcolor($color-mac-green)
  &[yellow]
    border: 1px solid darken(bgcolor($color-mac-yellow), 4)
    >summary
      background: bgcolor($color-mac-yellow)
  &[red]
    border: 1px solid darken(bgcolor($color-mac-red), 4)
    >summary
      background: bgcolor($color-mac-red)

details[open]
  border: 1px solid darken($color-block, 8)
  >summary
    border-bottom: 1px solid darken(bgcolor($color-block), 8)
    border-bottom-left-radius: 0
    border-bottom-right-radius: 0
  &[blue]
    border: 1px solid darken(bgcolor($color-md-blue), 8)
    >summary
      border-bottom: 1px solid darken(bgcolor($color-md-blue), 8)
  &[cyan]
    border: 1px solid darken(bgcolor($color-mac-cyan), 8)
    >summary
      border-bottom: 1px solid darken(bgcolor($color-mac-cyan), 8)
  &[green]
    border: 1px solid darken(bgcolor($color-mac-green), 8)
    >summary
      border-bottom: 1px solid darken(bgcolor($color-mac-green), 8)
  &[yellow]
    border: 1px solid darken(bgcolor($color-mac-yellow), 8)
    >summary
      border-bottom: 1px solid darken(bgcolor($color-mac-yellow), 8)
  &[red]
    border: 1px solid darken(bgcolor($color-mac-red), 8)
    >summary
      border-bottom: 1px solid darken(bgcolor($color-mac-red), 8)
  >summary
    color: $color-p
    margin-bottom: 0
    &:hover
      &:after
        content: '-'
  >div.content
    padding: $gap
    margin: 0 - $gap
    margin-top: 0
    >
      p,.tabs,ul,ol,.highlight,div.note
        &:first-child
          margin-top: 0
        &:last-child
          margin-bottom: 0
