
.alert
	display: none
	position: fixed
	top: 50%
	left: 50%
	transform: translate(-50%,-50%)
	z-index: 99999
	text-align: center
	padding: 24px 36px 22px 36px
	border-radius: $border-radius-codeblock
  box-shadow: $box-shadow-card
  font-weight: bold

  &.alert-success
    color: darken($color-mac-green, .2)
    background-color: lighten($color-mac-green, .4)


  &.alert-info
    color: darken($color-mac-cyan, .2)
    background-color: lighten($color-mac-cyan, .4)


  &.alert-warning
    color: darken($color-mac-yellow, .2)
    background-color: lighten($color-mac-yellow, .4)


  &.alert-danger
    color: darken($color-mac-red, .2)
    background-color: lighten($color-mac-red, .4)
